#include <stdio.h>
#include <string.h>

int paridade(char c);
int main() {
    char stringnumero[100];
    char ultimodigito;
    int b;
    printf("Informe um Numero, e o programa dira se ele eh Par ou Impar:\n");
    scanf("%s",stringnumero);
    ultimodigito=stringnumero[strlen(stringnumero)-1];
    b=paridade(stringnumero[strlen(stringnumero)-1]);
    if (b==1)
        printf("Numero Par\n");
    else
        printf("Numero Pmpar\n");
}

int paridade(char ultimodigito){
    int b;
    if (ultimodigito == '0' || ultimodigito == '2' || ultimodigito == '4' || ultimodigito == '6' || ultimodigito == '8')
        b=1;
    else {
        int b=0;
    }
    return b;
}
