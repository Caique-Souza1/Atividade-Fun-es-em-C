#include <stdio.h>
#include <string.h>

int main (){   
    int b=1,n,ret,RET,Ret,reT;
    char novamente[4];
    printf("Calculadora de Quadrado\n");
    while(b==1){
        printf("Informe um Numero:\n");
        scanf("%d",&n);
        fflush(stdin);
        n=n*n;
        printf("Resultado = %d\n",n);
        printf("Quer fazer outro Calculo? [S/N]\n");
        scanf("%s",novamente);
         fflush(stdin);
         ret=strcmp(novamente,"Nao");
         RET=strcmp(novamente,"nao");
         Ret=strcmp(novamente,"N");
         reT=strcmp(novamente,"NAO");
        if (ret==0 || RET==0||Ret==0||reT==0)
            b=0;
    }
return 0;
}
